# --- config.node1.config (Versión Corregida con Nuevos Puertos) ---

# Ice.Default.Locator: PUERTO CAMBIADO A 4071
Ice.Default.Locator=IceGrid/Locator:tcp -h 127.0.0.1 -p 4071

# Configuración del Nodo 1
IceGrid.Node.Name=node1
IceGrid.Node.Data=icegrid/db/node1
# Node.Endpoints: PUERTO CAMBIADO A 4075
IceGrid.Node.Endpoints=tcp -h 127.0.0.1 -p 4075

# CollocateRegistry=1 es CRUCIAL: Arranca el Registry junto al Nodo
IceGrid.Node.CollocateRegistry=1

# Configuración del Registry (Puertos)
# Registry.Client.Endpoints (Locator): PUERTO CAMBIADO A 4071
IceGrid.Registry.Client.Endpoints=tcp -h 127.0.0.1 -p 4071
# Registry.Server.Endpoints (Comunicación interna): PUERTO CAMBIADO A 4072
IceGrid.Registry.Server.Endpoints=tcp -h 127.0.0.1 -p 4072
IceGrid.Registry.LMDB.Path=icegrid/db/registry

# Internal.Endpoints (SOLUCIÓN AL ERROR DE CONFIGURACIÓN): PUERTO CAMBIADO A 4072
IceGrid.Registry.Internal.Endpoints=tcp -h 127.0.0.1 -p 4072

# Desactivar seguridad para desarrollo
IceGrid.Registry.PermissionsVerifier=IceGrid/NullPermissionsVerifier
IceGrid.Registry.AdminPermissionsVerifier=IceGrid/NullPermissionsVerifier