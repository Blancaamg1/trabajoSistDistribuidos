# --- icegrid/config/node1.config ---

# Apuntamos al Registry que este mismo nodo va a levantar
Ice.Default.Locator=IceGrid/Locator:tcp -h 127.0.0.1 -p 4061

# Configuración del Nodo
IceGrid.Node.Name=node1
IceGrid.Node.Data=icegrid/db/node1
IceGrid.Node.Endpoints=tcp -h 127.0.0.1
IceGrid.Node.CollocateRegistry=1

# Configuración del Registry (Base de datos y puertos)
IceGrid.Registry.Client.Endpoints=tcp -h 127.0.0.1 -p 4061
IceGrid.Registry.Server.Endpoints=tcp -h 127.0.0.1
IceGrid.Registry.Internal.Endpoints=tcp -h 127.0.0.1
IceGrid.Registry.LMDB.Path=icegrid/db/registry

# Desactivar seguridad para desarrollo (usuario/pass no requeridos)
IceGrid.Registry.PermissionsVerifier=IceGrid/NullPermissionsVerifier
IceGrid.Registry.AdminPermissionsVerifier=IceGrid/NullPermissionsVerifier

# Ruta a plantillas (opcional pero recomendada, verifica si existe en tu sistema)
# IceGrid.Registry.DefaultTemplates=/usr/share/ice/templates.xml



Ice.Default.Locator=IceGrid/Locator -t:tcp -h 127.0.0.1 -p 4061
IceGrid.Node.Name=node1
IceGrid.Node.Data=icegrid/db/node1
IceGrid.Node.Endpoints=tcp
IceGrid.Node.CollocateRegistry=1
IceGrid.Registry.Client.Endpoints=tcp -p 4061
IceGrid.Registry.Server.Endpoints=tcp
IceGrid.Registry.Internal.Endpoints=tcp
IceGrid.Registry.LMDB.Path=icegrid/db/registry
IceGrid.Registry.PermissionsVerifier=IceGrid/NullPermissionsVerifier
IceGrid.Registry.AdminPermissionsVerifier=IceGrid/NullPermissionsVerifier
IceGrid.Registry.DefaultTemplates=/tmp/default-templates.xml

