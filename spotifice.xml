<icegrid>
    <application name="SpotificeApp">

        <!-- ================= NODE 1 ================= -->
        <node name="node1">

            <server id="MediaServer1"
                    exe="./media_server.py"
                    pwd="/home/ubuntu/distribuidos/Trabajo/trabajoSistDistribuidos"
                    activation="on-demand">

                <option>server.config</option>

                <adapter name="MediaServerAdapter" endpoints="tcp">
                    <object identity="mediaServer1"
                            type="::Spotifice::MediaServer"/>
                </adapter>

                <property name="MediaServer.Content" value="media"/>
                <property name="MediaServer.Playlists" value="playlists"/>
                <property name="MediaServer.UsersFile" value="users.json"/>

                <property name="Ice.Stdout" value="media_server1.out"/>
                <property name="Ice.Stderr" value="media_server1.err"/>
            </server>

            <server id="MediaRender1"
                    exe="./media_render.py"
                    pwd="/home/ubuntu/distribuidos/Trabajo/trabajoSistDistribuidos"
                    activation="on-demand">

                <option>render.config</option>

                <adapter name="MediaRenderAdapter" endpoints="tcp">
                    <object identity="mediaRender1"
                            type="::Spotifice::MediaRender"/>
                </adapter>

                <property name="Ice.Stdout" value="media_render1.out"/>
                <property name="Ice.Stderr" value="media_render1.err"/>
            </server>

        </node>

        <!-- ================= NODE 2 ================= -->
        <node name="node2">

            <server id="MediaServer2"
